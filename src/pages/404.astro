---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Not Found" description="Error 404 - site not found.">
    <main class="height-smart-fill-screen">
        <div class="text-group flow">
        <h1>Error 404</h1>
        <p>The page you requested has not been found.</p>
        <p><a href="/">Return to home page.</a></p>
    </div>
    </main>
</BaseLayout>

<style>
    main {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .text-group * {
        margin-inline: auto;
        text-align: center;
    }
</style>