---
interface Props {
    title: string;
    href: string;
    size?: string;
}

const { title, href = "#", size } = Astro.props;
---

<a href={href}>
    <div>
        <p>{title}</p>
    </div>
</a>

<style define:vars={{ "button-size": size }}>
    div {
        padding: 0.75rem;
        border: 1px solid var(--color-neutral-500);
        width: fit-content;
    }
    a {
        text-decoration: none;
    }
    a:hover,
    a:focus-within {
    }
    a div p {
        font-size: var(--font-size-large);
    }
</style>
