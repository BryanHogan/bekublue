---
interface Props {
    title: string;
    href: string;
    size?: string;
}

const { title, href = "#", size } = Astro.props;
---

<div>
    <a href={href}>
        <p>{title}</p>
    </a>
</div>

<style define:vars={{ "button-size": size }}>
    div {
        padding: var(--space-m);
        border: 1px solid var(--color-neutral-500);
        border-radius: var(--border-radius-m);
        
    }
    a {
        text-decoration: none;
    }
    a:hover,
    a:focus-within {
    }
</style>
